{
  "name": "app",
  "version": "0.1.0",
  "engines": {
    "node": "<=16.17.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "private": true,
  "scripts": {
    "dev": "next dev -p 3020",
    "dev:emulator": "firebase emulators:exec 'npm run dev' --import=scripts/firebase/firestore-export/ --ui",
    "build": "next build",
    "build:emulator": "firebase emulators:exec 'npm run build' --import=scripts/firebase/firestore-export/",
    "start": "next start",
    "start:emulator": "firebase emulators:exec 'npm start' --import=scripts/firebase/firestore-export/",
    "lint": "next lint",
    "cy:open": "cypress open",
    "cy:run": "CYPRESS_BASE_URL=http://localhost:3021 cypress run",
    "prepare": "cd ../ && husky install"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.6.9",
    "autoprefixer": "^10.4.8",
    "daisyui": "^2.24.0",
    "firebase": "^9.9.2",
    "next": "12.2.4",
    "postcss": "^8.4.16",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-firebase-hooks": "^5.0.3",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@google-cloud/firestore": "^6.0.0",
    "@types/node": "18.6.4",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "cross-env": "^7.0.3",
    "cypress": "^10.8.0",
    "cypress-firebase": "^2.2.2",
    "eslint": "^8.22.0",
    "eslint-config-next": "12.2.4",
    "eslint-config-prettier": "^8.5.0",
    "firebase-admin": "^11.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
